<!DOCTYPE html>
<html>
  <head>
    <title>CrookedDees</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Crooked Dee's", root_path, class: "navbar-brand" %>
          </li>
          <% if logged_in? %>
          <li class="nav-item active">
            <%= link_to 'My Appointments', appointments_path, class: "nav-link" %>
          </li>
          <% if current_user.is_admin? %>
          <li class="nav-item active">
            <%= link_to 'Admin', admin_appointments_path, class: "nav-link" %>
          </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to 'Log Out', session_path(current_user), method: :delete, class: "nav-link btn btn-danger" %>
          </li>
          <% else %>
          <li class="nav-item active">
            <%= link_to 'Sign Up', new_user_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Log In', new_session_path, class: "nav-link btn btn-success" %>
          </li>
          <% end %>

        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
