<h2>New Appointment</h2>

<%= form_for @appointment do |f| %>

<div class="container-fluid">

  <div class="form-group row">
    <%= f.label :dentist_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.collection_select :dentist_id, Dentist.order(:name), :id, :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :appointment_at, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= f.datetime_field :appointment_at, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: "btn btn-primary"%>
  </div>

</div>
<% end %>
