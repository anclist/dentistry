<h2>Appointments</h2>

<ul>
  <% @appointments.each do |appointment| %>
  <li>
    Patient: <%= appointment.user.name %>
    <br>
    <%= appointment.appointment_at.strftime("%a, %v at %I:%M %p") %> with <%= appointment.dentist.name %>
    <br>
    <small>Status:  <%= appointment.status %> </small>
    <br>
    <%= link_to 'Confirm', confirm_admin_appointment_path(appointment), method: :post, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', cancel_admin_appointment_path(appointment), method: :post, class: 'btn btn-danger' %>
  </li>
  <% end %>
</ul>
